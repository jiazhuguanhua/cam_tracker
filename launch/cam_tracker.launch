<launch>
  <!-- 可配置参数 -->
  <arg name="cam_topic" default="/usb_cam/image_raw" />
  <arg name="show_image" default="false" />
  <arg name="debug" default="false" />

  <!-- 延迟启动追踪节点，等摄像头稳定 -->
  <node name="cam_tracker_node" pkg="cam_tracker" type="cam_tracker_node.py" output="screen"
        respawn="false" launch-prefix="bash -c 'sleep 2; $0 $@' ">
    <param name="cam_topic" value="$(arg cam_topic)" />

    <!-- YOLO模型参数 -->
    <param name="confidence_threshold" value="0.75" />
    <param name="show_image" value="$(arg show_image)" />

    <!-- 日志控制参数 -->
    <param name="debug_mode" value="$(arg debug)" />

    <!-- 追踪器参数 -->
    <param name="max_age" value="30" />
    <param name="min_hits" value="3" />
    <param name="iou_threshold" value="0.3" />
  </node>
</launch>